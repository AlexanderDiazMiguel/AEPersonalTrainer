<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AEPersonalTrainerApp.ViewModels.TrainingViewModels"
             x:Class="AEPersonalTrainerApp.Pages.TrainingPages.TrainingPageList"
             Title="TrainingsPage">

    <ContentPage.BindingContext>
        <vm:TrainingsViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" BackgroundColor="LightGray" Padding="10">
            <Label Text="Trainings" FontSize="24" VerticalOptions="Center" />
            <Button Text="+" FontSize="24" HorizontalOptions="End" Clicked="OnAddTrainingClicked" />
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Trainings}"                      
                        SelectionMode="Single"
                        SelectionChanged="OnTrainingSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>