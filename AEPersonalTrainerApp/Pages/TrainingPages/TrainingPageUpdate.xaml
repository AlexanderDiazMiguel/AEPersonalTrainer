<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AEPersonalTrainerApp.Pages.TrainingPages.TrainingPageUpdate"
             Title="Training Update">

    <StackLayout Padding="20">
        <Label Text="Nombre" />
        <Entry x:Name="NameEntry" Placeholder="Nombre del entrenamiento"/>

        <Label Text="Descripción" />
        <Editor x:Name="DescriptionEntry" Placeholder="Descripción del entrenamiento"/>

        <Label Text="Texto del Audio" />
        <Editor x:Name="AudioTextEntry" Placeholder="Texto del audio (opcional)"/>

        <Label Text="Descanso Predeterminado (en segundos)" />
        <Entry x:Name="DefaultRestEntry" Placeholder="Tiempo de descanso" Keyboard="Numeric"/>

        <Button Text="Guardar" Clicked="SaveCommand"/>
    </StackLayout>
</ContentPage>